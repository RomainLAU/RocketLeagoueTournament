{% extends "/base.html.twig" %}

{% block title %}List Tournament{% endblock %}


{% block content %}

    <h1>List of Tournaments</h1>
    <ul id="tournament-list">
        {% for tournament in tournaments %}
            <li class="tournament">
                <b>Title:</b> {{ tournament.name }}<br>
                <b>Price:</b> {{ tournament.admissionPrice }}<br>
                <b>Host:</b> {{ tournament.host }}<br>
                <a href="/tournament/{{ tournament.id }}">Voir</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}